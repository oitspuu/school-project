@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BLL.DTO.UserCourse

@{
    ViewData["Title"] = "Delete";
}

<h1>@Resources.BLL.Common.Delete</h1>

<h3>@Resources.BLL.Common.ConfirmDelete</h3>
<div>
    <h4>@Resources.BLL.Common.Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomeworkTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeworkTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="SchoolId" />
        <input type="hidden" asp-for="OriginalSchoolTextId" />
        <input type="hidden" asp-for="OriginalCourseTextId" />
        <input type="hidden" asp-for="CourseId" />
        <input type="submit" value="@Resources.BLL.Common.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@Resources.BLL.Common.BackToList</a>
    </form>
</div>
