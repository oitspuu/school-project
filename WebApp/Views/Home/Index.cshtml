            </tr>
            </thead>
            <tbody>
            @if (Model.UserHobbies != null)
            {
                foreach (var item in Model.UserHobbies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HobbyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeSpent)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Hobby" asp-route-id="@item.Id">@Resources.BLL.Common.Edit</a> |
                            <a asp-action="Delete" asp-controller="Hobby" asp-route-id="@item.Id">@Resources.BLL.Common.Delete</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>