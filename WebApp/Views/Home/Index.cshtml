@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BLL.DTO.Identity.AppUser

@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col">
        <div class="h4 border-bottom border-5">
            @Resources.BLL.Common.Courses
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>
                    @Resources.Domain.Course.CourseName
                </th>
                <th>
                    @Resources.Domain.Course.ECTS
                </th>
                <th>
                    @Resources.Domain.Course.StartDate
                </th>
                <th>
                    @Resources.Domain.Course.EndDate
                </th>
                <th>
                    @Resources.Domain.UserCourse.HomeworkTime
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.UserCourses != null)
            {
                foreach (var item in Model.UserCourses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ECTS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HomeworkTime)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Course" asp-route-id="@item.Id">@Resources.BLL.Common.Edit</a> |
                            <a asp-action="Details" asp-controller="Course" asp-route-id="@item.Id">@Resources.BLL.Common.Details</a> |
                            <a asp-action="Delete" asp-controller="Course" asp-route-id="@item.Id">@Resources.BLL.Common.Delete</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
    <div class="col">
        <div class="h4 border-bottom border-5">
            @Resources.BLL.Common.Workplaces
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>
                    @Resources.Domain.Work.WorkName
                </th>
                <th>
                    @Resources.Domain.Work.LunchBreakDuration
                </th>
                <th>
                    @Resources.BLL.Common.TotalWorkHours
                </th>
                <th>
                    @Resources.Domain.UserWork.Start
                </th>
                <th>
                    @Resources.Domain.UserWork.End
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.UserWorks != null)
            {
                foreach (var item in Model.UserWorks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LunchBreakDuration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalWorkHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Start)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.End)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Work" asp-route-id="@item.Id">@Resources.BLL.Common.Edit</a> |
                            <a asp-action="Details" asp-controller="Work" asp-route-id="@item.Id">@Resources.BLL.Common.Details</a> |
                            <a asp-action="Delete" asp-controller="Work" asp-route-id="@item.Id">@Resources.BLL.Common.Delete</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="h4 border-bottom border-5">
            @Resources.BLL.Common.Sleep
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>
                    @Resources.Domain.SleepDuration.Day
                </th>
                <th>
                    @Resources.Domain.UserWork.Start
                </th>
                <th>
                    @Resources.Domain.UserWork.End
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.SleepDurations != null)
            {
                foreach (var item in Model.SleepDurations)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Day)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Start)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.End)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Sleep" asp-route-id="@item.Id">@Resources.BLL.Common.Edit</a> |
