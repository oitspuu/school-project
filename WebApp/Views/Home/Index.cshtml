            </tbody>
        </table>
    </div>
    <div class="col">
        <div class="h4 border-bottom border-5">
            @Resources.BLL.Common.Hobbies
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>
                    @Resources.Domain.Hobby.HobbyName
