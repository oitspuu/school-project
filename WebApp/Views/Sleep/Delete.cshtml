@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BLL.DTO.SleepDuration

@{
    ViewData["Title"] = "Delete";
}

<h1>@Resources.BLL.Common.Delete</h1>

<h3>@Resources.BLL.Common.ConfirmDelete</h3>
<div>
    <h4>SleepDuration</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Resources.Domain.SleepDuration.Day
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.SleepDuration.Start
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.SleepDuration.End
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.End)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Resources.BLL.Common.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@Resources.BLL.Common.BackToList</a>
    </form>
</div>
