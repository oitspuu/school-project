@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BLL.DTO.UserHobby

@{
    ViewData["Title"] = "Delete";
}

<h1>@Resources.BLL.Common.Delete</h1>

<h3>@Resources.BLL.Common.ConfirmDelete</h3>
<div>
    <h4>@Resources.BLL.Common.Hobby</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Resources.Domain.Hobby.HobbyName
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HobbyName)
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            @Resources.Domain.UserHobby.TimeSpent
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeSpent)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Resources.BLL.Common.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@Resources.BLL.Common.BackToList</a>
    </form>
</div>
