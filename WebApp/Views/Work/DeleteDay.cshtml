@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BLL.DTO.WorkHours

@{
    ViewData["Title"] = "Delete day";
}

<h1>@Resources.BLL.Common.Delete</h1>

<h3>@Resources.BLL.Common.ConfirmDelete</h3>
<div>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Resources.Domain.WorkHours.Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.WorkHours.StartTime
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.WorkHours.EndTime
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.WorkHours.LunchBreak
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LunchBreak)
        </dd>
        <dt class = "col-sm-2">
            @Resources.BLL.Common.Duration
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
    </dl>
    
    <form asp-action="DeleteDay">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Resources.BLL.Common.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@Resources.BLL.Common.BackToList</a> |
        <a asp-action="Details" asp-route-id="@Model.UserWorkId">@Resources.BLL.Common.Details</a>
    </form>
</div>