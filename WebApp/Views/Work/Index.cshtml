@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BLL.DTO.UserWork>

@{
    ViewData["Title"] = "Work Page";
}

<div class="text-center">
    <h1 class="display-4">@Resources.BLL.Common.Work</h1>
</div>
<p>
    <a asp-action="Create">@Resources.BLL.Common.CreateNew</a>
</p>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>
            @Resources.Domain.UserWork.Work
        </th>
        <th>
            @Resources.Domain.Work.LunchBreakDuration
        </th>
        <th>
            @Resources.BLL.Common.TotalWorkHours
        </th>
        <th>
            @Resources.Domain.UserWork.Start
        </th>
        <th>
            @Resources.Domain.UserWork.End
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LunchBreakDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalWorkHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Resources.BLL.Common.Edit</a> |
                <a asp-action="Add" asp-route-id="@item.Id">@Resources.BLL.Common.AddTime</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Resources.BLL.Common.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Resources.BLL.Common.Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>